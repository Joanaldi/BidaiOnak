<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="#74C8FF"> <!-- Cambio de color de fondo del CardView -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54F688E8"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino"
            android:textColor="#FF7043"
            android:textSize="18sp"
            android:textStyle="bold" /> <!-- Cambio de color del texto -->

        <TextView
            android:id="@+id/textViewCoste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coste Total"
            android:textColor="#333333" /> <!-- Cambio de color del texto -->

        <TextView
            android:id="@+id/textViewTransporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transporte"
            android:textColor="#333333" /> <!-- Cambio de color del texto -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
